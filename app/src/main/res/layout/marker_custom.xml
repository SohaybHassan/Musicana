<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_music"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/niki"
        app:civ_border_color="#FFf"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/image_play_smale"
        app:layout_constraintBottom_toBottomOf="@+id/image_music"
        app:layout_constraintEnd_toEndOf="@+id/image_music"
        app:layout_constraintStart_toStartOf="@id/image_music"
        app:layout_constraintTop_toBottomOf="@id/image_music"
        app:layout_constraintTop_toTopOf="@id/image_music" />
</androidx.constraintlayout.widget.ConstraintLayout>